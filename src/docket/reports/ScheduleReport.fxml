<?import javafx.scene.text.Font?>


<AnchorPane prefHeight="600.0" prefWidth="900.0" xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1">
   <children>
      <GridPane AnchorPane.bottomAnchor="20.0" AnchorPane.leftAnchor="20.0" AnchorPane.rightAnchor="20.0" AnchorPane.topAnchor="20.0">
        <columnConstraints>
          <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
        </columnConstraints>
        <rowConstraints>
          <RowConstraints maxHeight="50.0" minHeight="50.0" prefHeight="50.0" vgrow="SOMETIMES" />
          <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
        </rowConstraints>
         <children>
            <Label fx:id="titleLabel" text="Schedule for Contact">
               <font>
                  <Font name="System Bold" size="18.0" />
               </font>
            </Label>
            <TableView fx:id="reportTableView" prefHeight="200.0" prefWidth="200.0" GridPane.rowIndex="1">
              <columns>
                <TableColumn fx:id="idColumn" prefWidth="191.0" text="Appointment ID" />
                <TableColumn fx:id="titleColumn" prefWidth="149.0" text="Title" />
                  <TableColumn fx:id="typeColumn" prefWidth="75.0" text="Type" />
                  <TableColumn fx:id="descriptionColumn" prefWidth="118.0" text="Description" />
                  <TableColumn fx:id="startColumn" prefWidth="96.0" text="Start" />
                  <TableColumn fx:id="endColumn" prefWidth="101.0" text="End" />
                  <TableColumn fx:id="customerColumn" prefWidth="117.0" text="Customer ID" />
              </columns>
            </TableView>
         </children>
      </GridPane>
   </children>
</AnchorPane>
